import java.util.ArrayList;

public class Supermarket {
	private ArrayList<Product> ProductDB;
	ShoppingList ShL=new ShoppingList();
	Product pr;
	private boolean exist=false;
	public Supermarket(){
		ProductDB=new ArrayList<Product>();
		pr=new Product();
	}
	
	// Method that add products on the DB, only if are not added
	public void AddProduct(String name,double price){
		for(int i=0;i<ProductDB.size();i++){
			if(name==ProductDB.get(i).getName())
				exist=true;
		}
		if(!exist){
		pr.setName(name);
		pr.setPrice(price);
		ProductDB.add(pr);
		}
	}
	
	// Method that removes product on the DB
	public void RemProduct(String name){
		for(int i=0;i<ProductDB.size();i++){
			if(name==ProductDB.get(i).getName())
				ProductDB.remove(i);
				//exist=true;
		}
	}
	
	// Method that shows all the products in the DB
	public void listProducts(){
		System.out.println("NAME"+"\t\tPRICE");
		for(int i=0;i<ProductDB.size();i++){
		System.out.println(ProductDB.get(i).getName() + "\t\t$" + ProductDB.get(i).getPrice());
		}
		}
	
	public void SellProduct(int i){
		ShL.BuyProduct(ProductDB.get(i));
	}
	
	public int listsize(){
		return ProductDB.size();
	}
	
}


