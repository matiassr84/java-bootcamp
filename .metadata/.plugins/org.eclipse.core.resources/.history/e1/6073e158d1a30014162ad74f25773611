
import java.util.ArrayList;

public class ShoppingList {
	// Products contained on a shopping list
	private ArrayList<Product> ProductList;
	private double subtotal;
	//private Product prod;

	
	public ShoppingList(){
		ProductList=new ArrayList<Product>();
	}
	
	// Add product function,if it already exist, then increase the product counter
	public void BuyProduct(Product product){
	boolean exist=false;
	//System.out.println("hola");
		for(int i=0;i<ProductList.size();i++){
				if(product.getName().equals(ProductList.get(i).getName()))	{
				product.counter();
				//System.out.println("igual");
				exist=true;
		}
	}
	if(!exist)
		ProductList.add(product);
	subtotal = subtotal + product.getPrice();
	}
	
	// Remove product function
	public void removeProdut(Product product){
		ProductList.remove(product);
		subtotal = subtotal - product.getPrice();
	}
	
	public String getName(int i){
		return ProductList.get(0).getName();
	}
	
	public void list(){
		System.out.println("Shopping list detail");
		System.out.println("\nNAME"+"\t\tPRICE"+"\t\tQUANTITY\n");
		for(int i=0;i<ProductList.size();i++){
			System.out.println(ProductList.get(i).toString());
		}
		System.out.println("SUBTOTAL" + "\t\t" + subtotal);
	}
}
